<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:fillViewport="false"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/uno"
                    android:textColor="#a5a7a6"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaUno"/>

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/dos"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaDos" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/tres"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaTres" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/cuatro"
                    android:textColor="#a5a7a6"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaCuatro" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/cinco"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaCinco" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/seis"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaSeis" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/siete"
                    android:textColor="#a5a7a6"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaSiete" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/ocho"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaOcho" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/nueve"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaNueve" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/diez"
                    android:textColor="#a5a7a6"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaDiez" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/once"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaOnce" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/doce"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaDoce" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/trece"
                    android:textColor="#a5a7a6"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaTrece" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/catorce"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaCatorce" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:id="@+id/quince"
                    android:textColor="#a5a7a6"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fotografias"
                    android:onClick="pistaQuince" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

